{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Inscription{% endblock %}

{% block main %}

<div class="col-md-8 mt-5 p-5">
<form method="post">
    <fieldset class="pt-5 mb-auto">
        <legend class="mb-1">Rejoignez-nous en remplissant le formulaire ci-dessous :</legend>
        

            {{form_start(registrationForm)}}

                {{form_row(registrationForm.username)}}
                {{form_row(registrationForm.password)}}

                <button class="btn btn-primary mt-1" type="submit">Valider</button>

            {{form_end(registrationForm)}}

    </fieldset>
</form>
</div>

{% endblock %}