{% extends "base.html.twig" %}

{% block title %}Mon profil{% endblock %}

{% block main %}

<form action="{{ path('main_myProfile') }}" method="POST">

    <div class="mt-5 pt-5 row">
        <div class="col-5">
        <fieldset>
        <legend class="mb-3">Vos identifiants :</legend>
            <div class="form-group">
            <label for="inputUsername">Username :</label>
            <input type="text" value="{{ user.username }}" name="username" id="inputUsername" class="form-control" required disabled />
            </div>
            <div class="form-group">
            <label for="inputPassword">Mot de passe :</label>
            <input type="password" value="{{ user.password }}" name="password" id="inputPassword" class="form-control" required disabled />
            </div>
            <button class="btn btn-primary" type="button">Changer le mot de passe</button>
        </fieldset>
        </div>

        <div class="offset-2 col-5">
        <fieldset id="PersonalInfo">
        <legend class="mb-3">Vos informations personnelles :</legend>
            <div class="form-group">
            <label for="inputUsername">Email :</label>
            <input type="text" value="{{ userProfile.email }}" name="email" id="inputEmail" class="form-control" required />
            </div>
            <div class="form-group">
            <label for="inputPassword">Prénom :</label>
            <input type="text" value="{{ userProfile.firstName }}" name="firstName" id="inputFirstName" class="form-control" required />
            </div>
            <div class="form-group">
            <label for="inputPassword">Nom :</label>
            <input type="text" value="{{ userProfile.lastName }}" name="lastName" id="inputLastName" class="form-control" required />
            </div>
            <div class="form-group">
            <label for="inputPassword">Nom de la société :</label>
            <input type="text" value="{{ userProfile.companyName }}" name="companyName" id="inputCompanyName" class="form-control" required />
            </div>
            <div class="form-group">
            <label for="inputPassword">Numéro de siret :</label>
            <input type="text" value="{{ userProfile.siret }}" name="siret" id="inputSiret" class="form-control" required />
            </div>
            <div class="form-group">
            <label for="inputPassword">Profession :</label>
            <input type="text" value="{{ userProfile.activity }}" name="activity" id="inputActivity" class="form-control" required />
            </div>
            <div class="form-group">
            <label for="inputPassword">Ma personnalité :</label>
            <input type="text" value="{{ userProfile.aboutUser }}" name="aboutUser" id="inputAboutUser" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary mt-1" id="updatebtn" name="submit">Valider les changements !</button>
        </fieldset>
        </div>
    </div>
</form>

{% endblock %}

