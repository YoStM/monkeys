{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Annuaire utilisateurs{% endblock %}

{% block main %}

<div class="offset-lg-1 pt-5 pb-3">
    <h1>Annuaire</h1>
</div>

<div class="offset-lg-1 col-lg-10 p-0">
    <div style="overflow-x:auto">
    <table class="table table-hover">
        <thead>
            <tr class="bg-primary text-white toUppercase">
                <th>Freelance</th>
                <th>Activité</th>
                <th>Société</th>
                <th class="text-center">Détails</th>
            </tr>
        </thead>
        <tbody>
        {% for usersProfile in usersDirectory %}
            
            <tr>
                <td>{{usersProfile.firstName|capitalize}} {{usersProfile.lastName|first}}.</td>
                <td>{{usersProfile.activity}}</td>
                <td>{{usersProfile.companyName}}</td>
                <td  class="text-center"><a href="{{path('user_freelanceDetails', {'freelanceUsername': usersProfile.userId.username})}}" class="btn btn-primary"><i class="bi bi-info-circle"></i></a></td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    </div>

</div>

{% endblock %}