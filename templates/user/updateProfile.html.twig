{% extends "base.html.twig" %}

{% block title %}Mon profil{% endblock %}

{% block main %}

<div class="text-center pt-5 pb-3">
<h1>Modification de mon profil</h1>
</div>

<div class="col-9 mt-3 p-5 ml-auto mr-auto">
    <form method="post">
        {{form_start(form)}}

        <fieldset id="PersonalInfo" class="pt-5 mb-auto">
            <legend class="text-center mb-3">Vos informations personnelles&nbsp;:</legend>
            <div class="form-group row">
                <label for="firstName" class="col-sm-4 col-form-label">Prénom&nbsp;:</label>
                <div class="col-sm-8">
                {{form_widget(form.firstName)}}
                </div>
                </div>
                
                <div class="form-group row">
                <label for="lastName" class="col-sm-4 col-form-label">Nom&nbsp;:</label>
                <div class="col-sm-8">
                {{form_widget(form.lastName)}}
                </div>
                </div>

                <div class="form-group row">
                <label for="companyName" class="col-sm-4 col-form-label">Société&nbsp;:</label>
                <div class="col-sm-8">
                {{form_widget(form.companyName)}}
                </div>
                </div>

                <div class="form-group row">
                <label for="siret" class="col-sm-4 col-form-label">Siret&nbsp;:</label>
                <div class="col-sm-8">
                {{form_widget(form.siret)}}
                </div>
                </div>

                <div class="form-group row">
                <label for="activity" class="col-sm-4 col-form-label">Profession&nbsp;:</label>
                <div class="col-sm-8">
                {{form_widget(form.activity)}}
                </div>
                </div>

                <div class="form-group row">
                <label for="aboutUser" class="col-sm-4 col-form-label">Mon&nbsp;Univers&nbsp;:</label>
                <div class="col-sm-8">
                {{form_widget(form.aboutUser)}}
                </div>
                </div>
            </div>
        </fieldset>
        <div class="d-flex justify-content-center">
        <button class="btn btn-primary">Valider les changements !</button>
        </div>
        {{form_end(form)}}
    </form>
</div>

{% endblock %}

