{% extends "base.html.twig" %}

{% block title %}Mon profil{% endblock %}

{% block main %}

<div class="offset-lg-1 pt-5 pb-3">
<h1>Mon Profil</h1>
</div>

<div class="row">
    
    <div class="mt-1 mb-1 ml-auto col-lg-5">
    <fieldset>
    <legend class="mb-5">Vos identifiants&nbsp;:</legend>
    {# nesting table in a container with style "overflow-x:auto" in order to get a horiwontal scroll bar if te screen is too small #}
        <div style="overflow-x:auto">
        <table class="table table-borderless">
            <thead>
            </thead>
            <tbody>
                <tr>
                    <td>Username :</td>
                    <td>{{user.username}}</td>
                </tr>
                <tr>
                    <td>Mot de passe :</td>
                    <td>******</td>
                </tr>
            </tbody>
        </table>
        </div>
    </fieldset>
    </div>

    <div class="mt-1 mb-1 mr-auto col-lg-5">
    <fieldset id="PersonalInfo">
    <legend class="mb-5">Vos informations personnelles&nbsp;:</legend>
    {# nesting table in a container with style "overflow-x:auto" in order to get a horiwontal scroll bar if te screen is too small #}
        <div style="overflow-x:auto"> 
        <table class="table table-borderless">
            <thead>
            </thead>
            <tbody>
                <tr>
                    <td>Email :</td>
                    <td>{{userProfile.email}}</td>
                </tr>
                <tr>
                    <td>Prénom :</td>
                    <td>{{userProfile.firstName}}</td>
                </tr>
                <tr>
                    <td>Nom :</td>
                    <td>{{userProfile.lastName}}</td>
                </tr>
                <tr>
                    <td>Société :</td>
                    <td>{{userProfile.companyName}}</td>
                </tr>
                <tr>
                    <td>Siret :</td>
                    <td>{{userProfile.siret}}</td>
                </tr>
                <tr>
                    <td>Profession&nbsp;:</td>
                    <td>{{userProfile.activity}}</td>
                </tr>
                <tr>
                    <td>Mon&nbsp;univers&nbsp;:</td>
                    <td>{{userProfile.aboutUser}}</td>
                </tr>
            </tbody>
        </table>
        </div>
    </fieldset>
    </div>
    
</div>
<div class="row">
<div class="mt-1 mb-1 ml-auto col-lg-5">
<div class="d-flex justify-content-start">
        <a href="{{path('user_updatePassword', {'id': user.id})}}" id="passwordupdate" type="submit" class="btn btn-primary">Modifier mot de passe</a>
</div>
</div>
<div class="mt-1 mb-1 mr-auto col-lg-5">
<div class="d-flex justify-content-start">
    <a href="{{path('user_updateProfile', {'id': user.id})}}" id="updatebtn" class="btn btn-primary" type="submit">Modifier informations</a>
</div>
</div>
</div>

{% endblock %}

